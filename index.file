                background-repeat: no-repeat;" for="{{ section.id }}-{{ option.position }}-{{ forloop.index0 }}">
                
                </label>
                {% else %}
                <label  for="{{ section.id }}-{{ option.position }}-{{ forloop.index0 }}">
                {{ value }}
                </label>
                    {% endif %}
            {%- endfor -%}
            </fieldset>
        {%- endfor -%}
        <script type="application/json">
            {{ product.variants | json }}
        </script>
